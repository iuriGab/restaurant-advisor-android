<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/imageview_restaurant"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/cocobambu"
        android:contentDescription="@string/RestaurantImage"/>

    <TextView
        android:id="@+id/textview_restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-5dp"
        android:layout_below="@id/imageview_restaurant"
        android:textAlignment="center"
        android:textSize="23sp"
        android:text="@string/coco_bambu_conceito_eldorado"/>

    <TextView
        android:id="@+id/textview_restaurant_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_restaurant_name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/sophisticated"/>

    <TextView
        android:id="@+id/textview_restaurant_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/textview_restaurant_type"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Melhor restaurante da cidade, oferece o mais amplo cardápio, que inclui: frutos do mar, peixes, carnes, grelhados, pizzas e crepes."/>

    <TextView
        android:id="@+id/textview_restaurant_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_below="@id/textview_restaurant_detail"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="Domingo a Sábado: 11H às 23H"/>

    <TextView
        android:id="@+id/textview_restaurant_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_restaurant_hour"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="Avenida Reboucas, 3970 - Pinheiros, São Paulo, Estado de São Paulo, 05402-600"/>

    <ImageView
        android:id="@+id/imageview_restaurant_button_like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/heart"
        app:tint="@color/material_dynamic_secondary20" />

</RelativeLayout>